<div class="not-prose group relative">
  <pre class="overflow-x-auto rounded-lg bg-zinc-900 p-4 text-sm leading-relaxed"><slot /></pre>
  <button
    class="copy-btn absolute right-2 top-2 rounded-md border border-zinc-600 bg-zinc-700 px-2 py-1 text-xs text-zinc-300 opacity-0 transition-opacity hover:bg-zinc-600 group-hover:opacity-100"
    aria-label="Copy code to clipboard"
  >
    Copy
  </button>
</div>

<script is:inline>
  document.querySelectorAll('.copy-btn').forEach(function (btn) {
    btn.addEventListener('click', function () {
      var code = btn.parentElement.querySelector('code');
      var text = (code || btn.parentElement.querySelector('pre')).textContent || '';
      navigator.clipboard.writeText(text).then(function () {
        btn.textContent = 'Copied!';
        setTimeout(function () { btn.textContent = 'Copy'; }, 2000);
      });
    });
  });
</script>
