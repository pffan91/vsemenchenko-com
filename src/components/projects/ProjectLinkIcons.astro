  label: string;
  url: string;
  type: 'appstore' | 'playstore' | 'github' | 'website' | 'demo' | 'video' | 'other';
}

interface Props {
  links: Link[];
}

const { links } = Astro.props;

const iconPaths: Record<Link['type'], string> = {
