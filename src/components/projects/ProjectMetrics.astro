---
interface Metric {
  label: string;
  value: string;
}

interface Props {
  metrics: Metric[];
}

const { metrics } = Astro.props;
---

<div class="flex flex-wrap items-center gap-x-6 gap-y-3 rounded-xl border border-zinc-200 bg-zinc-50 px-6 py-4 dark:border-zinc-800 dark:bg-zinc-900">
  {metrics.map((metric, i) => (
    <>
      {i > 0 && (
        <div class="hidden h-8 w-px bg-zinc-200 dark:bg-zinc-700 sm:block" aria-hidden="true" />
      )}
      <div class="text-center">
        <div class="text-lg font-bold text-zinc-900 dark:text-zinc-100">{metric.value}</div>
        <div class="text-xs text-zinc-500 dark:text-zinc-400">{metric.label}</div>
      </div>
    </>
  ))}
</div>
